<ul>
  <% @categories.each do |category| %>
    <li><%= link_to category.title, category_path(category) %></li>
  <% end %>
</ul>

<ul class="item-list">
  <% @items.each do |item| %>
    <li>
      <%= link_to item.title, item_path(item) %> | <%= price_to_currency(item.price) %> | <%= button_to 'Add to Cart', line_items_path(item_id: item)  if user_signed_in? %>
    </li>
  <% end %>
</ul>
